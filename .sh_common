export PROJECT="/project/dremel_lab"
export STANDARD="/standard/dremel_lab"
export SANDBOX="${PROJECT}/sandbox"
export PIPELINES_HOME="${PROJECT}/workflows/pipelines"
export PATH="${PROJECT}/scripts/bin:$PATH"

# mamba stuff
export PATH="/project/dremel_lab/miniforge3/bin:$PATH"
# >>> mamba initialize >>>
# !! Contents within this block are managed by 'mamba shell init' !!
export MAMBA_EXE='/sfs/gpfs/tardis/project/dremel_lab/miniforge3/bin/mamba';
export MAMBA_ROOT_PREFIX='/sfs/gpfs/tardis/project/dremel_lab/miniforge3';
__mamba_setup="$("$MAMBA_EXE" shell hook --shell bash --root-prefix "$MAMBA_ROOT_PREFIX" 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__mamba_setup"
else
    alias mamba="$MAMBA_EXE"  # Fallback on help from mamba activate
fi
unset __mamba_setup
alias conda="mamba"
# <<< mamba initialize <<<
